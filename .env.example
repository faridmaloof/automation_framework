# =============================================================================
# EXAMPLE ENVIRONMENT VARIABLES - AUTOMATION FRAMEWORK
# =============================================================================
# üìù Copiar este archivo como .env y configurar con valores reales
# ‚ö†Ô∏è NUNCA commitear el archivo .env al repositorio
# =============================================================================

# ENVIRONMENT (dev, qa, staging, prod)
# Usado para cargar secrets espec√≠ficos del ambiente
ENV=dev
NODE_ENV=development

# BROWSER CONFIGURATION
# Single browser: BROWSER=chromium
# Multi-browser: BROWSER=chromium,firefox,webkit (ejecuta en todos)
HEADLESS=true
SLOWMO=0
BROWSER=chromium

# TIMEOUTS (milliseconds)
DEFAULT_TIMEOUT=30000
NAVIGATION_TIMEOUT=30000
API_TIMEOUT=30000

# =============================================================================
# API BASE URL - ‚ö†Ô∏è REQUERIDO
# =============================================================================
# Debe ser SOLO el dominio base, sin paths (/api, /v1, etc.)
# Los paths se agregan en cada servicio/task espec√≠fico
# 
# ‚úÖ Correcto:   https://api.example.com
# ‚ùå Incorrecto: https://api.example.com/v1
# ‚ùå Incorrecto: https://api.example.com/api/v2
#
# Ejemplos por ambiente:
# DEV:     https://api-dev.example.com
# QA:      https://api-qa.example.com
# STAGING: https://api-staging.example.com
# PROD:    https://api.example.com
# =============================================================================
API_BASE_URL=

# =============================================================================
# WEB BASE URL (opcional - para tests web)
# =============================================================================
# WEB_BASE_URL=https://www.example.com

# LOGGING
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_DIR=logs

# REPORTING CONFIGURATION
REPORT_DIR=reports
GENERATE_HTML_REPORT=true
GENERATE_JSON_REPORT=true
GENERATE_JUNIT_REPORT=true
GENERATE_ALLURE_REPORT=false        # Requiere: npm install -D allure-commandline
GENERATE_TIMELINE_REPORT=true
GENERATE_CUCUMBER_REPORT=true

# DATABASE - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=testdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# DATABASE - MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=testdb
MYSQL_USER=root
MYSQL_PASSWORD=your_password_here

# DATABASE - MongoDB
MONGODB_URI=mongodb://localhost:27017/testdb

# DATABASE - SQL Server
MSSQL_HOST=localhost
MSSQL_PORT=1433
MSSQL_DB=testdb
MSSQL_USER=sa
MSSQL_PASSWORD=your_password_here

# APPLICATION URLS
BASE_URL_DEV=https://dev.yourapp.com
BASE_URL_QA=https://qa.yourapp.com
BASE_URL_STAGING=https://staging.yourapp.com
BASE_URL_PROD=https://yourapp.com

# API URLs
API_BASE_URL_DEV=https://api-dev.yourapp.com
API_BASE_URL_QA=https://api-qa.yourapp.com
API_BASE_URL_STAGING=https://api-staging.yourapp.com
API_BASE_URL_PROD=https://api.yourapp.com

# AUTHENTICATION
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
AUTH_TOKEN=your_auth_token_here

# SECRET MANAGEMENT
SECRET_PROVIDER=dotenv  # Options: dotenv, aws, azure, gcp

# AWS SECRETS MANAGER (if using AWS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_SECRETS_MANAGER_SECRET_NAME=test-automation-secrets

# AZURE KEY VAULT (if using Azure)
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret
AZURE_VAULT_URL=https://your-keyvault.vault.azure.net/

# GCP SECRET MANAGER (if using GCP)
GCP_PROJECT_ID=your_project_id
GCP_SECRET_NAME=test-automation-secrets
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# XRAY / JIRA INTEGRATION
XRAY_CLIENT_ID=your_xray_client_id
XRAY_CLIENT_SECRET=your_xray_client_secret
XRAY_BASE_URL=https://xray.cloud.xpand-it.com
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_PROJECT_KEY=TEST

# REPORTING
ALLURE_RESULTS_DIR=allure-results
ALLURE_REPORT_DIR=allure-report
GENERATE_ALLURE_REPORT=true

# NOTIFICATIONS
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
TEAMS_WEBHOOK_URL=https://your-team.webhook.office.com/webhookb2/YOUR_WEBHOOK
EMAIL_NOTIFICATIONS=false
EMAIL_TO=qa-team@yourcompany.com

# PARALLELIZATION
WORKERS=4
RETRIES=1
SHARDS=1

# LOGGING
LOG_LEVEL=info  # Options: error, warn, info, debug, trace
LOG_TO_FILE=true
LOG_DIR=logs

# SCREENSHOTS & VIDEOS
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
TRACE_ON_FAILURE=true

# ORCHESTRATION
ORCHESTRATION_ENABLED=false
SUBMODULES_AUTO_UPDATE=false
TEAM_PROJECTS_DIR=team-projects

# CI/CD
CI=false
CI_PROVIDER=  # Options: github, azure, jenkins
CI_BUILD_ID=
CI_BUILD_URL=

# PERFORMANCE
CONNECTION_POOL_MIN=2
CONNECTION_POOL_MAX=10
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60000

# FEATURE FLAGS
ENABLE_VISUAL_TESTING=false
ENABLE_ACCESSIBILITY_TESTING=false
ENABLE_CONTRACT_TESTING=true
ENABLE_PERFORMANCE_TESTING=false
